{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="bg-purple-200 h-screen">

		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3 text-center">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<div class="flex flex-col h-screen items-center justify-center">
            
            <form method="post" class="mx-auto p-4 rounded-lg shadow-lg w-1/4 bg-white">
                <h1 class="font-bold text-2xl mb-8 text-center">Please sign in</h1>
                
				<div class="mb-3">
					<label for="inputEmail">Email :</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="border rounded px-2 py-1 w-full" placeholder="Email" autocomplete="email" required autofocus>
				</div>

				<div class="mb-3">
					<label for="inputPassword">Mot de passe :</label>
					<input type="password" name="password" id="inputPassword" class="border rounded px-2 py-1 w-full" placeholder="Mot de passe" autocomplete="current-password" required>
				</div>

				<div class="mb-10">
					<label class="" for="rememberMe">Se souvenir de moi</label>
					<input class="border p-2 rounded" type="checkbox" name="_remember_me" id="rememberMe">
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="px-6 py-2 bg-purple-300 rounded shadow-lg w-full hover:bg-purple-500 hover:insert-shadow" type="submit">Sign in</button>

			</form>
		</div>
	</div>
{% endblock %}
