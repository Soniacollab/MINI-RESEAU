{{ form_start(form) }}
<div class="mb-4">
    {{ form_label(form.content, 'Message') }}
    {{ form_widget(form.content, {'attr': {'class': 'w-full border rounded p-2'}}) }}
    {{ form_errors(form.content) }}
</div>

<div class="mb-4">
    {{ form_label(form.image, 'Image (optionnelle)') }}
    {{ form_widget(form.image, {'attr': {'class': 'w-full border rounded p-2'}}) }}
    {{ form_errors(form.image) }}
</div>

<button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
    {{ button_label|default('Publier') }}
</button>
{{ form_end(form) }}
