{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{# Affichage des messages flash #}
    <div class="w-full max-w-md mx-auto mb-6">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-3 p-3 rounded shadow transition
                    {{ label == 'success' 
                        ? 'bg-green-200 text-green-800 dark:bg-green-700 dark:text-green-100' 
                        : 'bg-red-200 text-red-800 dark:bg-red-700 dark:text-red-100' }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="bg-purple-200 dark:bg-gray-900 min-h-screen flex items-center justify-center py-10">

        <form method="post" class="mx-auto p-6 rounded-lg shadow-lg w-full max-w-md bg-white dark:bg-gray-800">
            <h1 class="font-bold text-2xl mb-8 text-center text-gray-900 dark:text-gray-100">Se connecter</h1>

            {% if error %}
                <div class="mb-4 p-2 bg-red-200 dark:bg-red-700 text-red-800 dark:text-red-100 rounded">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="mb-4">
                <label for="inputEmail" class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Email :</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       class="w-full border rounded px-3 py-2 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 border-gray-300 dark:border-gray-600"
                       placeholder="Email" autocomplete="email" required autofocus>
            </div>

            <div class="mb-4">
                <label for="inputPassword" class="block mb-1 font-semibold text-gray-700 dark:text-gray-200">Mot de passe :</label>
                <input type="password" name="password" id="inputPassword"
                       class="w-full border rounded px-3 py-2 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 border-gray-300 dark:border-gray-600"
                       placeholder="Mot de passe" autocomplete="current-password" required>
            </div>

            <div class="mb-6 flex items-center gap-2">
                <input type="checkbox" name="_remember_me" id="rememberMe"
                       class="border p-2 rounded dark:bg-gray-700 dark:border-gray-600">
                <label for="rememberMe" class="text-gray-700 dark:text-gray-200">Se souvenir de moi</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit"
                    class="w-full bg-purple-300 hover:bg-purple-500 text-white font-semibold py-2 rounded shadow-lg">
                Connexion
            </button>

            <p class="mt-4 text-sm text-gray-700 dark:text-gray-200 text-center">
                Pas encore de compte ? <a href="{{ path('user_register') }}" class="text-purple-600 dark:text-purple-400 underline">Inscrivez-vous</a>
            </p>
        </form>
    </div>
{% endblock %}
