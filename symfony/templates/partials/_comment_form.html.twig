{# templates/partials/_comment_form.html.twig #}
{% if app.user %}
    <div class="mb-6">
        {{ form_start(form, {'attr': {'class': 'space-y-3'}}) }}

        <div>
            {{ form_widget(form.content, {
                'attr': {
                    'class': 'w-full border border-gray-300 dark:border-gray-600 rounded-lg p-3 bg-white dark:bg-gray-800 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none',
                    'placeholder': 'Ã‰crire un commentaire...'
                }
            }) }}
            {{ form_errors(form.content) }}
        </div>

        <div class="flex justify-end">
            {{ form_row(form.submit, {
                'attr': {
                    'class': 'bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-400 text-white font-semibold px-5 py-2 rounded-lg shadow transition'
                }
            }) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endif %}
