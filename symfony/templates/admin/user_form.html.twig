{% extends 'base.html.twig' %}

{% block title %}
    {{ editMode ? 'Modifier un utilisateur' : 'Créer un utilisateur' }}
{% endblock %}

{% block body %}
<div class="bg-purple-200 dark:bg-gray-900 min-h-screen flex flex-col items-center justify-center py-10">

    {# Affichage des messages flash #}
<div class="w-full px-4 mb-6">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-2 p-3 rounded shadow-lg transition
                {{ label == 'success' 
                    ? 'bg-green-200 text-green-900 dark:bg-green-700 dark:text-green-100' 
                    : 'bg-red-200 text-red-900 dark:bg-red-700 dark:text-red-100' }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>


    <form method="post" class="mx-auto p-6 rounded-lg shadow-lg w-full max-w-md bg-white dark:bg-gray-800">
        <h1 class="font-bold text-2xl mb-8 text-center text-gray-900 dark:text-gray-100">
            {{ editMode ? 'Modifier un utilisateur' : 'Créer un nouvel utilisateur' }}
        </h1>

        {% for field in [form.firstname, form.lastname, form.email, form.plainPassword, form.roles] %}
            <div class="mb-4">
                {{ form_label(field, null, {'label_attr': {'class': 'block mb-1 font-semibold text-gray-700 dark:text-gray-200'}}) }}
                {{ form_widget(field, {'attr': {'class': 'w-full border rounded px-3 py-2 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 border-gray-300 dark:border-gray-600'}}) }}
                {{ form_errors(field) }}
            </div>
        {% endfor %}

        <div class="mt-6">
            <button type="submit" class="w-full bg-purple-300 hover:bg-purple-500 text-white font-semibold py-2 rounded shadow-lg transition">
                {{ editMode ? 'Mettre à jour' : 'Créer' }}
            </button>
        </div>

        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
