{% extends "base.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <main>
        <!-- Titre de la page -->
        <div class="p-3 mx-auto text-center">
            <h1 class="display-4">Messages</h1>
        </div>

        <!-- Contenu de la page -->
        <div class="py-5 bg-light">
            <div class="container">
                <div class="row">
                    {% if messages is empty %}
                        <p class="text-center text-muted">Aucun message trouv√©.</p>
                    {% else %}
                        {% for message in messages %}
                            {% include 'partials/_card.html.twig' %}
                        {% endfor %}
                    {% endif %}
                </div>

                {# Inclut la pagination depuis le partial #}
                {% include 'partials/_pagination.html.twig' %}
            </div>
        </div>
    </main>
{% endblock %}
