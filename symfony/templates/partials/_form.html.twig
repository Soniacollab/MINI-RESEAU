<div class="mb-3">
    {{ form_label(form.title, 'Titre du post') }}
    {{ form_widget(form.title, {'attr': {'class': 'border rounded-md px-2 py-1 w-full dark:bg-gray-700', 'placeholder': 'Dis-nous ce qui te passe par la tête'}}) }}
    {{ form_errors(form.title) }}
</div>

<div class="mb-3">
    {{ form_label(form.content, 'Contenu du post') }}
    {{ form_widget(form.content, {'attr': {'class': 'border rounded-md px-2 py-1 w-full dark:bg-gray-700', 'placeholder': 'Exprime-toi ! Une pensée, une photo, une idée, un mood du jour...'}}) }}
    {{ form_errors(form.content) }}
</div>

<div class="mb-3">
    {{ form_label(form.image, 'Image (optionnelle)') }}
    {{ form_widget(form.image, {'attr': {'class': 'border rounded-md px-2 py-1 w-full', 'onchange': 'previewImage(event)'}}) }}
    {{ form_errors(form.image) }}

    {% if message.image %}
        <div class="mt-2">
            <img src="{{ asset('uploads/' ~ message.image) }}" alt="Image actuelle" class="" style="max-width: 200px;">
        </div>
    {% endif %}

    <img id="imagePreview" src="" alt="Aperçu de l’image" class="mt-2" style="max-width: 200px; display:none;">

    <div class="mt-3">
    {{ form_widget(form.submit, {'attr': {'class': 'bg-purple-300 shadow-lg rounded-md px-4 py-2 w-full hover:bg-purple-500 dark:text-black'}}) }}
    {{ form_end(form) }}
</div>

