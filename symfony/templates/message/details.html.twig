{% extends 'base.html.twig' %}

{% block title %}Message #{{ message.id }}{% endblock %}

{% block body %}
    {% include 'message/_card.html.twig' with { message: message } %}

    <h2 class="text-xl font-semibold mt-6 mb-3 text-gray-800 dark:text-gray-100">Commentaires</h2>

    {% for comment in message.comments %}
        <div class="border-l-4 border-blue-600 pl-3 mb-2 dark:text-gray-200">
            <p>{{ comment.content }}</p>
            <small>par {{ comment.author.firstname }} le {{ comment.createdAt|date('d/m/Y H:i') }}</small>
        </div>
    {% else %}
        <p>Aucun commentaire pour lâ€™instant.</p>
    {% endfor %}
{% endblock %}
